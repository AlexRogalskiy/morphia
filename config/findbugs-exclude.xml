<FindBugsFilter>

    <!-- All bugs in test classes, except for JUnit-specific bugs -->
    <Match>
        <Class name="~.*org\.bson.*"/>
        <Not>
            <Bug code="IJU"/>
        </Not>
    </Match>

    <Match>
        <Class name="~.*\.*Test.*"/>
        <Not>
            <Bug code="IJU"/>
        </Not>
    </Match>
    <Match>
        <Class name="~.*\.*Test.*"/>
        <Not>
            <Bug pattern="SE_BAD_FIELD, EI_EXPOSE_REP, EI_EXPOSE_REP2"/>
        </Not>
    </Match>
    <Match>
        <Class name="~.*Options.*"/>
        <Bug pattern="NM_SAME_SIMPLE_NAME_AS_SUPERCLASS"/>
    </Match>
    <Match>
        <Class name="dev.morphia.mapping.Mapper"/>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_WOULD_HAVE_BEEN_A_NPE"/>
    </Match>
    <Match>
        <Class name="dev.morphia.mapping.experimental.CollectionReference"/>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_WOULD_HAVE_BEEN_A_NPE"/>
    </Match>
    <Match>
        <Class name="dev.morphia.mapping.experimental.MapReference"/>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_WOULD_HAVE_BEEN_A_NPE"/>
    </Match>
    <Match>
        <!-- Ignore test entities as these will often have unused things -->
        <Package name="~org\.mongodb\.morphia\.testmappackage.*"/>
    </Match>
    <Match>
        <Class name="dev.morphia.testmodel.Hotel"/>
        <Bug pattern="EI_EXPOSE_REP, EI_EXPOSE_REP2"/>
    </Match>
    <Match>
        <Class name="dev.morphia.utils.E1"/>
        <Bug pattern="SS_SHOULD_BE_STATIC"/>
    </Match>
    <Match>
        <Class name="dev.morphia.mapping.MappedClass"/>
        <Bug pattern="WMI_WRONG_MAP_ITERATOR"/>
    </Match>
    <Match>
        <Bug code="SQL,XSS,J2EE,SW,STI,DL,JLM,MWN,NN,RS,UL,HRS,PT,MTIA,XFB"/>
    </Match>
    <Match>
        <Bug category="I18N,MT_CORRECTNESS,SECURITY,PERFORMANCE"/>
    </Match>
    <Match>
      <Class name="dev.morphia.query.QueryImpl" />
      <!--<Method name="compare" params="FindOptions,FindOptions"/>-->
      <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE" />
    </Match>
    <Match>
      <Class name="~dev.morphia.query.internal.Morphia.*Cursor" />
      <Method name="getServerAddress"/>
      <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE" />
    </Match>
</FindBugsFilter>
